" set colors
syntax on
colorscheme gruvbox
set t_Co=256
set background=dark

set cursorline
set enc=utf8

" key words
set hls

" line number
set number

" don't identify caps
set ic

" tab
set expandtab
set tabstop=4
set shiftwidth=2

" change line if too long
set wrap

" highlight this line
set cursorline
